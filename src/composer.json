{
    "name": "svrunit/svrunit",
    "description": "The Server Unit Testing framework.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "svrunit",
        "docker",
        "server",
        "testing"
    ],
    "authors": [
        {
            "name": "Christian Dangl"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-simplexml": "*",
        "ext-dom": "*",
        "symfony/yaml": "^4.0",
        "symfony/console": "*",
        "twig/twig": "v3.3.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "phpstan/phpstan": "*",
        "friendsofphp/php-cs-fixer": "^2.18"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "SVRUnit\\": "./"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SVRUnit\\Tests\\": "../tests/phpunit"
        }
    }
}
